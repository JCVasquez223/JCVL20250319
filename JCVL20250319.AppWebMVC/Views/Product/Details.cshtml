@model JCVL20250319.AppWebMVC.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h1 class="display-4">Product Details</h1>
    <hr class="bg-primary" style="height: 2px;" />

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
                <!-- Product Name -->
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>

                <!-- Description -->
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <!-- Price -->
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <!-- Brand -->
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Brand.BrandId)
                </dd>

                <!-- Category -->
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Category.CategoryId)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>