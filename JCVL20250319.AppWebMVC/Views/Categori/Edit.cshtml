@model JCVL20250319.AppWebMVC.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-4">
    <h1 class="display-4">Edit Category</h1>
    <hr class="bg-primary" style="height: 2px;" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryId" />

                <div class="form-group mb-3">
                    <label asp-for="CategoryName" class="form-label fw-bold"></label>
                    <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="CategoryName" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <input asp-for="Description" class="form-control" placeholder="Enter category description" />
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary w-50" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}